apiVersion: apps/v1
kind: Deployment
metadata:
  name: ai-frontend
  namespace: {{ namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ai-frontend
  template:
    metadata:
      labels:
        app: ai-frontend
    spec:
      containers:
      - name: ai-frontend
        image: ghcr.io/Cdaprod/ai-frontend:latest
        ports:
        - containerPort: 80
      imagePullSecrets:
      - name: ghcr-secret

---
apiVersion: v1
kind: Service
metadata:
  name: ai-frontend
  namespace: {{ namespace }}
spec:
  selector:
    app: ai-frontend
  ports:
  - protocol: TCP
    port: 80
    targetPort: 80
  type: LoadBalancer